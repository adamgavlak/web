@import "_normalize"
@import "_media"
@import "flexboxgrid.css"
@import "texta.css"

main_color = #F90
accent_color = #09F

text_color = #666666
text_accent_color = #AAAAAA

icon_idle_color = #BBBBBB
footer_color = #B4B4B4

twitter_color = #1DA1F2
codepen_color = #111
github_color = #222

*
  font-family "Texta W00 Light", Helvetica, sans-serif
  box-sizing border-box
  font-weight 300

.container
  width 100%
  max-width 1100px
  padding 2em
  margin 0 auto
  
header
  margin-top 4em

body, html
  height 100vh

//
// Header 
//
.meta
  text-align center
  
.logo
    display flex
    justify-content center
    margin-bottom 2em
    
+bp(large)
  .logo
    display flex
    justify-content flex-start
    margin-bottom 0
    
  .meta
    text-align right
    
h1
  color main_color
  font-family "Texta W00 Heavy"
  font-size 100px
  font-weight 700
  margin 10px 0 0
  line-height 1
  
strong
  font-family "Texta W00 Heavy"

h2.title
  color text_color
  font-family "Texta W00 Light"
  font-size 44px
  font-weight 300
  margin 0
  
h2
  color main_color
  font-family "Texta W00 Heavy"
  text-align center
  font-size 72px
  font-weight 700
  margin 35px 0 15px

p.description
  text-align left
  line-height 1.4

.projects
  margin-top 6em
  
+bp(large)
  h2
    text-align left
    
  h2.title 
    text-align right
    
  p.description
    text-align left

a
  text-decoration none
  
.btn
  background main_color
  color #fff
  padding 0.6em 1.2em
  border-radius 8px
  font-size 20px
  font-weight 700
  letter-spacing 0.025em
  box-shadow 0 2px 15px rgba(#000, 0.25)
  transition all 0.35s
  
.btn:hover
  background accent_color
  
@import "_projects"
  
main 
  display block
  margin-top 2em

.row.project-list
  margin-top 50px 
  
p.description
  color text_color
  font-size 30px
  margin 0
  
p.slogan
  color text_accent_color
  font-style italic
  font-size 32px
  font-weight 300
  margin 20px 0
  
.row.header
  margin-top 60px
  
@import "_tools"

@import "_contact"